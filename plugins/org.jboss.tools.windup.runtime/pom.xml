<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jboss.tools.windup</groupId>
		<artifactId>plugins</artifactId>
		<version>3.1.0-SNAPSHOT</version>
	</parent>

	<groupId>org.jboss.tools.windup.plugins</groupId>
	<artifactId>org.jboss.tools.windup.runtime</artifactId>

	<packaging>eclipse-plugin</packaging>

	<properties>
		<furnace.addon.dir>furnace-addon-repository</furnace.addon.dir>
	</properties>

	<dependencies>
		<!-- Windup API -->
		<dependency>
			<groupId>org.jboss.windup.exec</groupId>
			<artifactId>windup-exec-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.graph</groupId>
			<artifactId>windup-graph-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.config</groupId>
			<artifactId>windup-config-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.reporting</groupId>
			<artifactId>windup-reporting-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.rules.apps</groupId>
			<artifactId>rules-base-api</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.jboss.windup.graph.frames</groupId>
    		<artifactId>windup-frames</artifactId>
    		<version>${windup.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.utils</groupId>
    		<artifactId>utils</artifactId>
    		<version>${windup.version}</version>
		</dependency>

		<!-- furnace addons -->
		<dependency>
			<groupId>org.jboss.windup.exec</groupId>
			<artifactId>windup-exec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.graph</groupId>
			<artifactId>windup-graph</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.config</groupId>
			<artifactId>windup-config</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.config</groupId>
			<artifactId>windup-config-xml</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.ext</groupId>
			<artifactId>windup-config-groovy</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.reporting</groupId>
			<artifactId>windup-reporting</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.rexster</groupId>
			<artifactId>rexster</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.rules.apps</groupId>
			<artifactId>rules-java</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.rules.apps</groupId>
			<artifactId>rules-java-ee</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.windup.rules.apps</groupId>
			<artifactId>rules-xml</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jboss.forge.furnace</groupId>
			<artifactId>furnace</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.forge.furnace</groupId>
			<artifactId>furnace-se</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.forge.furnace</groupId>
			<artifactId>furnace-manager</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.forge.furnace</groupId>
			<artifactId>furnace-manager-resolver-maven</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jboss.forge.furnace</groupId>
				<artifactId>furnace-maven-plugin</artifactId>
				<version>${furnace.version}</version>
				<executions>
					<execution>
						<id>deploy-addons</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>addon-install</goal>
						</goals>
						<inherited>false</inherited>
						<configuration>
							<addonRepository>${basedir}/${furnace.addon.dir}</addonRepository>
							<addonIds>
								<addonId>org.jboss.windup.exec:windup-exec,${windup.version}</addonId>
								<addonId>org.jboss.windup.graph:windup-graph,${windup.version}</addonId>
								<addonId>org.jboss.windup.config:windup-config,${windup.version}</addonId>
								<addonId>org.jboss.windup.config:windup-config-xml,${windup.version}</addonId>
								<addonId>org.jboss.windup.ext:windup-config-groovy,${windup.version}</addonId>
								<addonId>org.jboss.windup.reporting:windup-reporting,${windup.version}</addonId>
								<addonId>org.jboss.windup.rexster:rexster,${windup.version}</addonId>
								<addonId>org.jboss.windup.rules.apps:rules-java,${windup.version}</addonId>
								<addonId>org.jboss.windup.rules.apps:rules-java-ee,${windup.version}</addonId>
								<addonId>org.jboss.windup.rules.apps:rules-xml,${windup.version}</addonId>
							</addonIds>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>get-libraries</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<skip>false</skip>
							<outputDirectory>${basedir}/lib</outputDirectory>
							<excludeScope>system</excludeScope>
							<excludeTransitive>false</excludeTransitive>
							<stripVersion>true</stripVersion>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}/lib</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>${basedir}/${furnace.addon.dir}</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>